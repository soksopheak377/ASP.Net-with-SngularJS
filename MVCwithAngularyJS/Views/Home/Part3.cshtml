@{
    ViewBag.Title = "Part3";
}

<h2>Part3 Login Page</h2>
<div class="container well">
    <div ng-controller="Part3Controller">
        <form novalidate name="f1" ng-submit="Login()">
            <div class="Error">{{Message}}</div>
            <div ng-show="IsLogedIn">
                <div class="'form-group">
                    <input type="text" name="cUsername" ng-class="submitted?'dirty':''" ng-model="LoginData.Username" placeholder="Please enter username" class="form-control" required autofocus/>
                    <span class="error" ng-show="(f1.cUsername.$dirty || submitted) && f1.cUsername.$error.$required">Username require.</span>
                </div>
                <div class="'form-group">
                    <input type="password" name="cPassword" ng-class="submitted?'dirty':''" ng-model="LoginData.Password" placeholder="Please enter Password" class="form-control" required autofocus />
                    <span class="error" ng-show="(f1.cPassword.$dirty || submitted) && f1.cPassword.$error.$required">Password require.</span>
                </div>
                <div class="'form-group">
                    <input type="Submit" name="" value="Login" class="form-control" />
                </div>
            </div>
        </form>
    </div>
</div>






@section scripts{
    <script src="~/Scripts/AngularController/Part3Controller.js"></script>
}